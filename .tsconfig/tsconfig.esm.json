{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Ecma script module configuration for Node 16 Library",
  "extends": "./tsconfig.base.json",
  "include": ["../src/**/*.ts"],
  "exclude": ["../src/**/*.spec.ts", "../src/**/*.test.ts"],
  "compilerOptions": {
    "outDir": "../lib/esm",
    "lib": ["es2021"],
    "module": "es2022",
    "target": "es2021"
  }
}
